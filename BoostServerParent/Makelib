CC = g++ -std=c++0x

CC_FLAGS = -w

LIBS = -lboost_system -lprotobuf
EXEC = run
SOURCES = $(wildcard *.cpp)
OBJECTS = $(SOURCES:.cpp=.o)

$(EXEC): $(OBJECTS)
	 $(CC) -c $(OBJECTS) -o $(EXEC) $(LIBS)
	 ar rcs libboostserver.a $(OBJECTS)

%.o: %.cpp
	$(CC) -c $(CC_FLAGS) $< -o $@

clean:
	rm -f $(EXEC) $(OBJECTS)
